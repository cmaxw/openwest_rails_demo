<h1><%= @post.title %></h1>

<%= @post.content %>

<br>

<%= render @post.comments %>

<%= form_for(@comment) do |f| %>
  <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </p>
  <%= f.hidden_field :post_id %>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
